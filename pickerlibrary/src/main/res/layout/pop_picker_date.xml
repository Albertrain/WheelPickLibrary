<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/picker_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pick_high"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/wheel_padding"
        android:paddingRight="@dimen/wheel_padding">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.necer.picklibrary.widget.WheelView
                android:id="@+id/wl_year"
                style="@style/DatePickerWheel" />
        </RelativeLayout>

        <TextView
            style="@style/DatePickerWheelDivide"
            android:text="@string/divide_text" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.necer.picklibrary.widget.WheelView
                android:id="@+id/wl_month"
                style="@style/DatePickerWheel" />
        </RelativeLayout>

        <TextView
            style="@style/DatePickerWheelDivide"
            android:text="@string/divide_text" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.necer.picklibrary.widget.WheelView
                android:id="@+id/wl_day"
                style="@style/DatePickerWheel" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>